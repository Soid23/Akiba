<div class="shadow-lg col-lg-5" data-aos="fade-in" data-aos-delay="120">


    <form class="form   justify-content-center  mt-3"  action="/patients/registerPatient" method="POST">
        <div class="form-heading justify-content-center text-center">
            <H2 class="justify-content-center">Register a new patient:</H2>
        </div>
        <div class="mb-4 mt-4">
            <p>Names</p>
            <label for="inputfirstname">First Name</label> <input class="" type="text" name="firstname" id="inputfirstname" placeholder="First Name" autofocus required>
            <label for="inputsecondname">Second name</label>
            <input type="text" name="secondname" id="inputsecondname" placeholder="Second Name" autofocus required>
            <br>
            <label class="mt-3 mb-3" for="inputsecondname">Middle Name</label>
            <input type="text" name="middlename" id="inputmiddlename" placeholder="Middle Name" autofocus required>
         <div class="mb-4 mt-4">
            
         </div>
         <div class="mb-4 mt-4">
            <label for="inputage">Date of Birth</label>
            <input type="date" name="dateOfBirth" id="inputdateOfBirth" placeholder="Age" required>
            <label for="inputage">Gender</label>
            <select name="gender" id="inputgender" required>
                <option value="">Select</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            
         </div>   
         <div class="contacdetails">
            <label for="inputmobile">Contact</label>
            <input type="phonenumber" name="mobile" id="inputmobile" placeholder="Phone" required>
         </div>  
         <div class="address mt-3">
            <label for="inputadress"> Adress</label>
            <input type="text" name="adress" id="adress">
            <label for="inputpostalcode">Postal code</label>
            <input type="postalcode" id="postalcode" id="postalcode">
            <label for="inputcity">City</label>
            <input type="text" id="city" name="city">


         </div>
              <button type="submit" class="btn btn-primary mt-3 mb-4 justify-content-center"> Register Patient</button>
    </form>

</div>