<div class="container mt-5">
    <div class="row">
      <div class="col-xs-12 col-md-10 mx-auto" data-aos="fade-up">
        <div class="card">
          <div class="card-header bg-success text-white">
            <h3 class="card-title"> User Details  </h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-3 col-lg-3 text-center">
                <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-fluid rounded-circle">
              </div>
              <div class="col-md-9 col-lg-9">
                <table class="table table-user-information">
                  <tbody>
                    <tr>
                        <td> Firstname </td>
                        <td><%= user.firstName %></td>
                    </tr>
                    <tr>
                      <td>Second Name </td>
                      <td><%= user.secondName %> </td>
                    </tr>
                    <tr>
                      <td>Email</td>
                      <td> <%= user.email %> </td>
                    </tr>
                    <tr>
                      <td>Phone Number</td>
                      <td>  (Mobile)</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="card-footer text-end">
            <a href="<%=`/users/${user._id}/edit` %>" class="btn btn-warning"><i class="bi bi-pencil"></i> Edit</a>
            <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')"><i class="bi bi-trash"></i> Delete</a>
          </div>
        </div>
      </div>
    </div>
  </div>